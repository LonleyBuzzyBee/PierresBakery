@{
  Layout = "_Layout";
}
@using Bakery.Models;

<div class="innerParent">
  <h1>List of vendors</h1>

  @if(Model.Count == 0)
  {
    <p>Ain't nuthin here</p>
  }
  <ul>
  @foreach(Vendor vendor in Model)
  {
<li> <a href="vendors/@vendor.Id"> @vendor.Name</a></li>
  }
    
  </ul>
  <div class="link">
  <a href="/">Home</a>
  </div>
</div>